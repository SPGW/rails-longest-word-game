<h1>New Game</h1>
<p><%= @letters %></p>

<p>What is the longest word you can make?</p>
<form action="/score" data-turbo="false" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="input" type="text" name="word">
  <input type="submit" value="Play!">
  <%= hidden_field_tag :letters, @letters %>

</form>
